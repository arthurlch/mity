// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["jest"],
    "outDir": "dist",
    "sourceMap": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "typeRoots": ["./src/types", "./node_modules/@types"]
}
